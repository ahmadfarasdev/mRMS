<table class="table table-responsive ">
  <thead>
  <tr>
    <th><%= t :enumeration_role_type %></th>
    <th>State</th>
    <th><%= t :label_note %></th>
    <th colspan="2"></th>
  </tr>
  </thead>

  <tbody>
  <% if @roles.any? %>
      <% @roles.each do |role| %>
          <tr>
            <td><%= role.role_type %></td>
            <td><%= role.state %></td>
            <td><%= role.note %></td>
            <td><%= edit_link edit_role_path(role) %></td>
            <td><%= delete_link role, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
      <% end %>
  <% else %>
      <tr align="center">
        <td colspan="5"><%= t('label_no_data') %></td>
      </tr>
  <% end %>
  </tbody>
</table>
