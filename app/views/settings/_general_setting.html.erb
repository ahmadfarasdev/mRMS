<%= form_for(@setting, url: settings_path, html: { method: 'post',  class: 'form-horizontal' }) do |f| %>
    <div class="form-group">
      <%= label_tag "application_name", "Application name: ", class: 'col-md-2 control-label' %>
      <div class="col-md-9">
        <%= text_field_tag :application_name, Setting['application_name'], class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= label_tag "email_from", "Email from: ", class: 'col-md-2 control-label' %>
      <div class="col-md-9">
        <%= text_field_tag :email_from, Setting['email_from'], class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= label_tag "Format date", "Format date: ", class: 'col-md-2 control-label' %>
      <div class="col-md-9">
        <%= select_tag :format_date, options_for_select(date_format_setting_options('en'), selected: Setting['format_date']), {class: 'form-control'} %>
      </div>
    </div>

     <div class="form-group">
      <%= label_tag "News Limit", "News Limit: ", class: 'col-md-2 control-label' %>
      <div class="col-md-9">
        <%= number_field_tag :news_limit, Setting['news_limit'], class: 'form-control' %>
      </div>
    </div>

     <div class="form-group">
      <%= label_tag "spreadsheet_limit", "Spreadsheet Limit (MB): (max 49 MB) ", class: 'col-md-2 control-label' %>
      <div class="col-md-9">
        <%= number_field_tag :spreadsheet_limit, Setting['spreadsheet_limit'], class: 'form-control' %>
      </div>
    </div>

    <%= f.text_area  :home_page_content, class: 'ck-editor' %>


    <div class="form-group margin-top-10" >
      <div class="col-xs-12">
        <%= f.submit t('button_save'), class: 'btn btn-success pull-right' %>
      </div>
    </div>
<% end %>
