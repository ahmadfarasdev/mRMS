<div class="btn-group">
  <button type="button" class="btn btn-primary dropdown-toggle filter-tab" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">FILTER <span class="caret"></span></button>
  <ul class="dropdown-menu dropdown-links" role="menu">
    <li>
      <span class="glyphicon glyphicon-asterisk" aria-hidden="true"></span>
      <%= link_to 'All', params.permit(:from, :to).merge(status_type: 'all'), class: 'dropdown-item'  %>
    </li>
    <div class='dropdown-item-dividier'></div>
    <li>
      <span class="glyphicon glyphicon-folder-open" aria-hidden="true"></span>
      <%= link_to 'Open', params.permit(:from, :to).merge(status_type: 'opened'), class: 'dropdown-item'  %>
    </li>
    <div class='dropdown-item-dividier'></div>
    <li>
      <span class="glyphicon glyphicon-folder-close" aria-hidden="true"></span>
      <%= link_to 'Closed', params.permit(:from, :to).merge(status_type: 'closed'), class: 'dropdown-item'  %>
    </li>
    <div class='dropdown-item-dividier'></div>
    <li>
      <span class="glyphicon glyphicon-flag" aria-hidden="true"></span>
      <%= link_to 'Flagged', params.permit(:from, :to).merge(status_type: 'flagged'), class: 'dropdown-item'  %>
    </li>
  </ul>
</div>
