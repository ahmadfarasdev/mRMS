<% options = defined?(other_options) ? other_options : {} %>
<div class="btn-group">
  <button type="button" class="btn btn-primary dropdown-toggle filter-tab" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">FILTER <span class="caret"></span></button>
  <ul class="dropdown-menu dropdown-links" role="menu" >
    <li>
      <span class="glyphicon glyphicon-asterisk" aria-hidden="true"></span>
      <%= link_to 'All', params.permit(:from, :to).merge!(options).merge!(format: :js, status_type: 'all', action: 'index', controller: '/' + controller_name, container: container), class: 'dropdown-item', remote: true  %>
    </li>
    <div class='dropdown-item-dividier'></div>
    <li>
      <span class="glyphicon glyphicon-folder-open" aria-hidden="true"></span>
      <%= link_to 'Open', params.permit(:from, :to).merge!(options).merge!(format: :js, status_type: 'opened', action: 'index', controller: '/' + controller_name, container: container), class: 'dropdown-item', remote: true  %>
    </li>
    <div class='dropdown-item-dividier'></div>
    <li>
      <span class="glyphicon glyphicon-folder-close" aria-hidden="true"></span>
      <%= link_to 'Closed', params.permit(:from, :to).merge!(options).merge!(format: :js, status_type: 'closed', action: 'index', controller: '/' + controller_name, container: container), class: 'dropdown-item', remote: true  %>
    </li>
    <div class='dropdown-item-dividier'></div>
    <li>
      <span class="glyphicon glyphicon-flag" aria-hidden="true"></span>
      <%= link_to 'Flagged', params.permit(:from, :to).merge!(options).merge!(format: :js, status_type: 'flagged', action: 'index', controller: '/' + controller_name, container: container), class: 'dropdown-item', remote: true  %>
    </li>
  </ul>
</div>
